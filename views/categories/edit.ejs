<% layout('/layout/boilerplate') %>
<button onclick="history.back()" class="btn btn-sm btn-outline-primary my-3">Back</button>
<h1>Edit category</h1>
<form action="/categories/<%= category._id %>?_method=PUT" method="POST">
    <div class="mb-3">
        <label for="name" class="form-label">Category Name</label>
        <input type="text" class="form-control" id="name" name="category[name]" value="<%= category.name %>">
    </div>
    <button type="submit" class="btn btn-primary">Update Category</button>
</form>
<form action="/categories/<%= category._id %>?_method=DELETE" method="POST" class="mt-3">
    <button type="submit" class="btn btn-danger">Delete Category</button>
</form> 
